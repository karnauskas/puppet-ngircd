
[Global]
  Name = <%= @server_name %>.
  AdminInfo1 = <%= @admin1 %>
  AdminInfo2 = <%= @admin2 %>
  AdminEMail = <%= @admin %>
  Info = <%= @info %>
  Listen = <%= @bind.join(',') %>
  MotdPhrase = <%= @motd %>
  Password = <%= @password %>
  PidFile = <%= @pid_file %>
  Ports = <%= @ports.join(',') %>
  HelpFile =
  ServerUID = <%= @user %>
  ServerGID = <%= @group %>
  Network = <%= @network %>

[Limits]
  ConnectRetry = 60
  IdleTimeout = 0
  MaxConnections = 0
  MaxConnectionsIP = 5
  MaxJoins = 10
  MaxNickLength = 9
  MaxListSize = 100
  PingTimeout = 120
  PongTimeout = 20

[Options]
  AllowedChannelTypes = <%= @allowed_channel_types %>
  AllowRemoteOper = <%= @allow_remote_op %>
  ChrootDir = <%= @chroot_dir %>
  CloakHost = <%= @cloak_host %>
  CloakHostModeX = <%= @cloak_host_modex %>
  CloakHostSalt = <%= @cloak_host_salt %>
  CloakUserToNick = <%= @cloak_user_to_nick %>
  ConnectIPv4 = <%= @ipv4_str %>
  ConnectIPv6 = <%= @ipv6_str %>
  DefaultUserModes = <%= @user_modes %>
  DNS = <%= @dns %>
  ;Ident = <%= @ident %>
  IncludeDir = <%= @conf_d %>
  MorePrivacy = <%= @more_privacy %>
  NoticeAuth = <%= @notice_auth %>
  OperCanUseMode = no
  OperChanPAutoOp = yes
  OperServerMode = no
  RequireAuthPing = no
  ScrubCTCP = no
  SyslogFacility = local5

<%if @ssl -%>
[SSL]
  CertFile = <%= @certfile %>
  CipherList = <%= @ciphers %>
  DHFile = <%= @dhfile %>
  KeyFile = <%= @keyfile %>
  KeyFilePassword = <%= @keyfilepassword %>
  Ports = <%= @ssl_ports.join(',') %>
<% end -%>
