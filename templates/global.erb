[Global]
  Name = <%= @server_name %>.
  AdminInfo1 = <%= @admin_info1 %>
  AdminInfo2 = <%= @admin_info2 %>
  AdminEMail = <%= @admin_email %>
  HelpFile = <%= @help_file %>
  Info = <%= @info %>
  ;Listen = 127.0.0.1
  ;MotdFile = 
  MotdPhrase = <%= @motd %>
  Password = <%= @password %>
  PidFile = /var/run/ngircd/ngircd.pid
  Ports = <%= @ports.join(',') %>
  ServerGID = ngircd
  ServerUID = ngircd
  Network = abba

[Limits]
  ConnectRetry = 60
  IdleTimeout = 0
  MaxConnections = 0
  MaxConnectionsIP = 5
  MaxJoins = 10
  MaxNickLength = 9
  MaxListSize = 100
  PingTimeout = 120
  PongTimeout = 20

[Options]
  AllowedChannelTypes = <%= @allowed_channel_types %>
  AllowRemoteOper = <%= @allow_remote_op %>
  ChrootDir = <%= @chroot_dir %>
  CloakHost = <%= @cloak_host %>
  CloakHostModeX = <%= @cloak_host_modex %>
  CloakHostSalt = <%= @cloak_host_salt %>
  CloakUserToNick = <%= @cloak_user_to_nick %>
  ConnectIPv4 = <%= @ipv4 %>
  ConnectIPv6 = <%= @ipv6 %>
  DefaultUserModes = <%= @user_modes %>
  DNS = <%= @dns %>
  Ident = <%= @ident %>
  IncludeDir = /etc/ngircd.conf.d
  MorePrivacy = <%= @more_privacy %>
  NoticeAuth = <%= @notice_auth %>
  OperCanUseMode = no
  OperChanPAutoOp = yes
  OperServerMode = no
  RequireAuthPing = no
  ScrubCTCP = no
  SyslogFacility = local5
  ;WebircPassword =

